import java.util.ArrayList;

public class salary {
    private ArrayList<employee> collection = new ArrayList<>();

    public salary(){
        collection = new ArrayList<>();
    }

    public void addSalary(employee employee){
        collection.add(employee);
    }

    public ArrayList<employee> searchEmployeeSalary(String ID){
        ArrayList<employee> result = new ArrayList<>();
        for(employee i : collection){
            if(i.getID().equalsIgnoreCase(ID)){
                result.add(i);
            }
        } 
        return result;
    }

    public double getTotalSalary(){
        double total = 0;
        for(employee i : collection){
            total += i.getSalary();
        }
        return total;
    }

    public String toString(){
        String total = "\n";
        for(int i=0; i<collection.size(); i++){
            employee e = collection.get(i);//getting book at position i similar as array arr[i], inisialise book b as an object
            total = total + e.toString();//
        }
        return total; 
    }
    
}
